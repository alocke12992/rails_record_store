<h1><%= @album.id ? 'Edit Album' : 'Create Album' %></h1>
<hr />
<%= form_for [@genre, @album] do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, required: true, autofocus: true %>
  <br />
  <%= f.label :artist %>
  <%= f.text_field :artist, required: true %>
  <br />
  <%= f.label :artwork %>
  <%= f.text_field :artwork, required: true %>
  <%= f.submit %>
<% end %>